//- @pugdoc
  name: modal
  description: 模态对话框
  arguments:
  examples:
    - |
      +modal
        div
mixin modal
  .modal.fade&attributes(attributes)
    .modal-dialog
      .modal-content.fn-wnd

//- @pugdoc
  name: modal-close
  description: 对话框关闭按钮
  arguments:
  examples:
    - |
      +modal-close
mixin modal-close
  button.close(data-dismiss='modal')
    span ×

//- @pugdoc
  name: modal-heading
  description: 对话框头部
  arguments:
    - {string} title - 标题
    - {string} [subtitle] - 副标题
  examples:
    - |
      +modal-heading('Title', 'Subtitle')
mixin modal-heading(title, subtitle)
  +container
    +modal-close
    .navbar-brand
      | #{title} &nbsp;
      small #{subtitle}
